@using Microsoft.AspNetCore.Http
@model IEnumerable<LogicaNegocio.Dominio.Usuario>



<h1>Obligatorio Esteban Recayte</h1>

<p>
    <a asp-action="Create">Crear nuevo usuario Administrador</a>
</p>

<p>
    <a asp-action="Index" asp-controller="Cliente">Ver todos los clientes</a>
</p>

<p>
    <a asp-action="Index" asp-controller="Pedido">Ver todos los pedidos</a>
</p>

<p>
    <a asp-action="Index" asp-controller="Articulo">Ver todos los articulos</a>
</p>

<h2>Listado de Usuarios Administradores</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre.Valor)
                </td>
                <td>
                    @Html.ActionLink("Editar usuario", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Borrar usuario", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
