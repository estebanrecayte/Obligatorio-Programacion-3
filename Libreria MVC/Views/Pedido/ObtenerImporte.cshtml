@model IEnumerable<LogicaNegocio.Dominio.Pedido>


@{
    ViewData["Title"] = "ObtenerImporte";
}

<h1>Obtener Importe</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                Fecha Prometida
            </th>
            <th>
                Razon Social
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaEntregaPrometida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.RazonSocial)
                </td>

            </tr>
        }
    </tbody>
</table>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Pedido" asp-action="ObtenerImporte" method="post">
            <div class="form-group">
                <label class="control-label">ID del Pedido:</label>
                <input type="text" name="id" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
    </div>
</div>
<h2>Importe total: $@ViewBag.importeTotal</h2>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>